{
  "name": "xuxum-public",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "cap:sync": "npx cap sync",
    "cap:ios": "npx cap open ios",
    "cap:android": "npx cap open android",
    "cap:run:ios": "npx cap run ios",
    "cap:run:android": "npx cap run android",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:mobile": "playwright test --project=mobile-chrome",
    "test:e2e:desktop": "playwright test --project=chromium",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:setup": "./setup-tests.sh",
    "test:smoke": "playwright test tests/quick-smoke.e2e.spec.ts --project=chromium --reporter=json > test-results.json",
    "test:demo-fail": "npx playwright test tests/demo-fail.e2e.spec.ts --project=chromium --reporter=json > test-results.json",
    "test:analyze-only": "node scripts/smart-test-analyzer.js",
    "test:smoke:analyze": "npm run test:smoke && npm run test:analyze-only",
    "test:full:analyze": "npm run test:e2e && npm run test:analyze-only",
    "test:analyze": "node scripts/ai-test-runner.js",
    "test:analyze:dev": "npm run test:analyze -- --dev",
    "test:ci": "playwright test --reporter=json > test-results.json && npm run test:analyze"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "@capacitor/splash-screen": "^8.0.0",
    "@capacitor/status-bar": "^8.0.0",
    "@headlessui/react": "^2.2.9",
    "@hookform/resolvers": "^5.2.2",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "firebase": "^12.4.0",
    "lucide-react": "^0.545.0",
    "next": "15.5.5",
    "node-fetch": "^3.3.2",
    "qrcode": "^1.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.65.0",
    "react-toastify": "^11.0.5",
    "sharp": "^0.34.4",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.5",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}
