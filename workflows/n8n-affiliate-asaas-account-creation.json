      "parameters": {
        "jsCode": "// Validar dados obrigat√≥rios para cria√ß√£o de conta Asaas de afiliado\nconst data = $input.first().json;\nconst errors = [];\n\n// Campos sempre obrigat√≥rios\nif (!data.name?.trim()) errors.push('Nome √© obrigat√≥rio');\nif (!data.email?.trim()) errors.push('Email √© obrigat√≥rio');\nif (!data.cpfCnpj?.trim()) errors.push('CPF/CNPJ √© obrigat√≥rio');\nif (!data.mobilePhone?.trim()) errors.push('Celular √© obrigat√≥rio');\nif (!data.address?.trim()) errors.push('Endere√ßo √© obrigat√≥rio');\nif (!data.addressNumber?.trim()) errors.push('N√∫mero do endere√ßo √© obrigat√≥rio');\nif (!data.province?.trim()) errors.push('Bairro √© obrigat√≥rio');\nif (!data.postalCode?.trim()) errors.push('CEP √© obrigat√≥rio');\n\n// Limpar CPF/CNPJ e validar tipo\nconst cleanCpfCnpj = data.cpfCnpj.replace(/\\D/g, '');\nconst isCPF = cleanCpfCnpj.length === 11;\nconst isCNPJ = cleanCpfCnpj.length === 14;\n\nif (!isCPF && !isCNPJ) {\n  errors.push('CPF deve ter 11 d√≠gitos ou CNPJ deve ter 14 d√≠gitos');\n} else {\n  // Para CPF, data de nascimento √© obrigat√≥ria\n  if (isCPF && !data.birthDate?.trim()) {\n    errors.push('Data de nascimento √© obrigat√≥ria para CPF');\n  }\n  \n  // Para CNPJ, tipo da empresa √© obrigat√≥rio\n  if (isCNPJ && !data.companyType?.trim()) {\n    errors.push('Tipo da empresa √© obrigat√≥rio para CNPJ');\n  }\n}\n\n// Se h√° erros, retornar erro\nif (errors.length > 0) {\n  return {\n    success: false,\n    message: 'Dados inv√°lidos para cria√ß√£o da conta Asaas',\n    errors: errors,\n    validationFailed: true,\n    affiliateId: data.affiliateId,\n    userId: data.userId\n  };\n}\n\n// Formatar dados para Asaas\nconst asaasData = {\n  name: data.name.trim(),\n  email: data.email.trim(),\n  loginEmail: data.loginEmail?.trim() || data.email.trim(),\n  cpfCnpj: cleanCpfCnpj,\n  phone: data.phone?.replace(/\\D/g, '') || '',\n  mobilePhone: data.mobilePhone.replace(/\\D/g, ''),\n  address: data.address.trim(),\n  addressNumber: data.addressNumber.trim(),\n  complement: data.complement?.trim() || '',\n  province: data.province.trim(),\n  postalCode: data.postalCode.replace(/\\D/g, ''),\n  incomeValue: Number(data.incomeValue) || 1000,\n  site: data.site?.trim() || ''\n};\n\n// S√≥ incluir campos espec√≠ficos baseado no tipo (CORRE√á√ÉO DO BUG)\nif (isCPF) {\n  asaasData.birthDate = data.birthDate;\n} else if (isCNPJ) {\n  asaasData.companyType = data.companyType;\n}\n\n// Incluir dados originais para atualiza√ß√£o posterior do afiliado\nreturn {\n  asaasData: asaasData,\n  originalData: data,\n  affiliateId: data.affiliateId,\n  userId: data.userId,\n  affiliateEmail: data.email.trim(),\n  documentType: isCPF ? 'CPF' : 'CNPJ',\n  validation: 'success'\n};"
      },
